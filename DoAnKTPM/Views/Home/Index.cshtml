<h1>Welcome: @username</h1>
<div class="promo-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo1">
                    <i class="fa fa-refresh"></i>
                    <p>30 Days return</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo2">
                    <i class="fa fa-truck"></i>
                    <p>Free shipping</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo3">
                    <i class="fa fa-lock"></i>
                    <p>Secure payments</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo4">
                    <i class="fa fa-gift"></i>
                    <p>New products</p>
                </div>
            </div>
        </div>
    </div>
</div>  @*End promo area*@
<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        Tên Sách: <input type="text" name="SearchString" />
        <input type="submit" value="Tìm Kiếm" />
    </p>
</form>
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title">All Products</h2>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div style="height: 400px; " class="col-md-3">
                            <div style="width: 200px; margin-bottom:20px" class="single-product">
                                <div style="height: 265px;" class="product-f-image">
                                    <img style="width:200px;height:265px" src="~/img/product/@item.Image" alt="">
                                    <div class="product-hover">
                                        <a asp-controller="Home" asp-action="Addcart" asp-route-id="@item.Id" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        <a asp-route-id="@item.Id" asp-controller="Home" asp-action="SingleProduct" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                    </div>
                                </div>

                                <h2><a asp-route-id="@item.Id" asp-controller="Home" asp-action="SingleProduct"> @item.Name</a></h2>

                                <div class="product-carousel-price">
                                    <ins>@item.Price.ToString("#,##0") VND</ins>

                                </div>

                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>  @*End main content area*@

