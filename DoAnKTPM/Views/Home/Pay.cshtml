@model DoAnKTPM.Models.Invoice
@{
    ViewData["Title"] = "Pay";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
    Account acc = ViewBag.Account;
}
<h3>Pay</h3>
<h4>Invoice</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Pay">
            <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
            <div class="form-group">
                <label asp-for="ShippingAddress" class="control-label"></label>
                <input asp-for="ShippingAddress" class="form-control" value="@acc.Address" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingPhone" class="control-label"></label>
                <input asp-for="ShippingPhone" class="form-control" value="@acc.Phone" />
                <span asp-validation-for="ShippingPhone" class="text-danger"></span>
            </div>
            <div class="mb-3">Tổng tiền: @ViewBag.CartsTotal.ToString("#,##0") VNĐ</div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Xác nhận</button>
                <span>@ViewBag.ErrorMessage</span>
            </div>
        </form>
    </div>
</div>
<hr />

